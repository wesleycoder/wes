---
import BaseHead from '../components/BaseHead.astro'
import Default from '../layouts/Default.astro'

const path = Astro.url.searchParams.get('path')
---

<Default>
  <BaseHead
    title={`Not found: ${path}`}
    description={`The page you are looking for does not exist ${path}`}
  >
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="robots" content="noindex" />
    <link rel="canonical" href={path} />
  </BaseHead>
  <main
    class="flex flex-col items-center justify-center min-h-screen"
  >
    <h1 class="text-4xl font-bold leading-loose">Not found</h1>
    <p class="text-2xl text-center">
      The page you are looking for does not exist.
      <br />
      Try going <a
        href="/"
        class="relative after:absolute after:top-1 after:-right-3 after:align-top after:content-['_â†—'] after:text-xs"
      >
        <span class="underline">back home</span>
      </a>
    </p>
  </main>
</Default>
